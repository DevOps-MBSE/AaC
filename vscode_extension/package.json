{
    "name": "aac",
    "publisher": "Arch-as-Code",
    "displayName": "Architecture As Code",
    "description": "A distinctly different take on Model-Based System Engineering (MBSE) that allows a system modeler to define a system in simple yaml",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jondavid-black/AaC.git"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "string",
            "title": "Architecture-as-Code",
            "properties": {
                "aac.pythonPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "/usr/local/bin",
                    "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
                    "description": "The filesystem path to the Python3 executable."
                },
                "aac.version": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "enum": [
                        "0.0.5",
                        "0.1.0",
                        "0.1.1",
                        "0.1.2"
                    ],
                    "default": "0.1.2",
                    "description": "The version of the installed AaC tool."
                },
                "aac.aacPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "",
                    "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
                    "description": "The filesystem path to the aac CLI tool."
                },
                "aac.lsp.serverMode": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "enum": [
                        "IO",
                        "TCP"
                    ],
                    "default": "IO",
                    "description": "The method of communication with the LSP server."
                },
                "aac.lsp.tcp.host": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
                    "default": "127.0.0.1",
                    "description": "The host to use for establishing a TCP connection with the LSP server."
                },
                "aac.lsp.tcp.port": {
                    "scope": "machine-overridable",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 65535,
                    "default": 5007,
                    "description": "The port to use for establishing a TCP connection with the LSP server."
                }
            }
        },
        "commands": [
            {
                "command": "aac.execute",
                "title": "Execute AaC Command",
                "category": "AaC"
            },
            {
                "command": "aac.visualEditor.new",
                "title": "Open Definition in Visual Editor",
                "category": "AaC"
            }
        ],
        "languages": [
            {
                "id": "aac",
                "extensions": [
                    ".aac",
                    ".yaml"
                ],
                "aliases": [
                    "aac",
                    "Architecture-as-Code",
                    "AaC"
                ],
                "configuration": "./aac-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aac",
                "scopeName": "injection.aac.keywords",
                "path": "./syntaxes/keywords.tmLanguage.plist",
                "injectTo": [
                    "source.yaml"
                ]
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "aac-visual-editor",
                    "title": "AaC Visual Explorer",
                    "icon": "src/resources/tablet-draw.svg"
                }
            ]
        },
        "views": {
            "aac-visual-editor": [
                {
                    "id": "definitions-in-context",
                    "name": "Definitions in the Active Context"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "aac-visual-editor",
                "contents": "You can have paragraphs of text here. You can have [links](https://code.visualstudio.com) to external sources or [internal commands](command:welcome-view-content-sample.hello).\nUse new lines to have new paragraphs.\nPlace a link alone in a paragraph to make it a button\n[Hello](command:welcome-view-content-sample.hello)"
            }
        ],
        "customEditors": [
            {
                "viewType": "aac.visualEditor",
                "displayName": "Edit AaC Definitions",
                "selector": [
                    {
                        "filenamePattern": "*.aac"
                    }
                ],
                "priority": "default"
            }
        ]
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package --yarn -o aac.vsix",
        "generate:rest_api": "yarn openapi-generator-cli generate -i ../AaC_OpenAPI_Schema.json -o src/requests/generated/aac_rest_api -g typescript-fetch --additional-properties=supportsES6=true,npmVersion=6.9.0,typescriptThreePlus=true"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.5.1",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/sinon": "^10.0.11",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.8.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "sinon": "^13.0.1",
        "ts-mock-imports": "^1.3.8",
        "typescript": "^4.5.5",
        "vsce": "^2.6.4"
    },
    "dependencies": {
        "@json-editor/json-editor": "^2.8.0",
        "node-fetch": "^2.6.0",
        "vscode-languageclient": "^7.0.0"
    }
}
