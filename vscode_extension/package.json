{
    "name": "aac",
    "displayName": "Architecture As Code",
    "description": "A distinctly different take on Model-Based System Engineering (MBSE) that allows a system modeler to define a system in simple yaml",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jondavid-black/AaC.git"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "string",
            "title": "Architecture-as-Code",
            "properties": {
                "aac.pythonPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "/usr/local/bin",
                    "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
                    "description": "The filesystem path to the Python3 executable."
                },
                "aac.version": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "enum": [
                        "0.0.4"
                    ],
                    "default": "0.0.4",
                    "description": "The version of the AaC tool to install"
                },
                "aac.aacPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "",
                    "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
                    "description": "The filesystem path to the aac CLI tool."
                },
                "aac.debugHost": {
                    "scope": "machine",
                    "type": "string",
                    "default": "127.0.0.1",
                    "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$",
                    "description": "The host to use when debugging the LSP client and or server."
                },
                "aac.debugPort": {
                    "scope": "machine",
                    "type": "number",
                    "default": 5000,
                    "description": "The port to use when debugging the LSP client and or server."
                }
            }
        },
        "languages": [
            {
                "id": "aac",
                "extensions": [
                    ".aac",
                    ".yaml"
                ],
                "aliases": [
                    "aac",
                    "Architecture-as-Code",
                    "AaC"
                ]
            }
        ],
        "taskDefinitions": [
            {
                "type": "aac",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "AaC command name"
                    }
                },
                "required": []
            }
        ]
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package --yarn -o aac.vsix"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.8.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.5",
        "vsce": "^2.6.4"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    }
}
