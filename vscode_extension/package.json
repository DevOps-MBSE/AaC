{
    "name": "aac",
    "publisher": "Arch-as-Code",
    "displayName": "Architecture As Code",
    "description": "A distinctly different take on Model-Based System Engineering (MBSE) that allows a system modeler to define a system in simple yaml",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jondavid-black/AaC.git"
    },
    "activationEvents": [
        "onStartupFinished",
        "onCommand:aac.changeAacPath",
        "onCommand:aac.changePythonPath",
        "onCommand:aac.execute"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "walkthroughs": [
            {
                "id": "welcome",
                "title": "Welcome to Architecture-as-Code",
                "description": "Walk through setting up the Architecture-as-Code extension.",
                "steps": [
                    {
                        "id": "aac-path",
                        "title": "AaC Path",
                        "description": "This step will configure the path to the `aac` tool that will be used by the extension.\n[Set AaC Path](command:aac.changeAacPath)",
                        "media": {"markdown": "media/aac-path.md"},
                        "completionEvents": ["onSettingChanged:aac.aacPath"]
                    },
                    {
                        "id": "python-path",
                        "title": "Python Path",
                        "description": "This step will configure the path to Python.\n[Set Python Path](command:aac.changePythonPath)",
                        "media": {"markdown": "media/python-path.md"},
                        "completionEvents": ["onSettingChanged:aac.pythonPath"]
                    },
                    {
                        "id": "view-docs",
                        "title": "View AaC Documentation",
                        "description": "Bookmark and read through the AaC documentation.\n[Open documentation](https://jondavid-black.github.io/AaC)",
                        "media": {"markdown": "media/view-docs.md"},
                        "completionEvents": ["onLink:https://jondavid-black.github.io/AaC"]
                    },
                    {
                        "id": "exec-aac-command",
                        "title": "Execute an AaC command",
                        "description": "Execute your first AaC command via the extension.\n[Execute an AaC Command](command:aac.execute)",
                        "media": {"markdown": "media/aac-command.md"},
                        "completionEvents": ["onCommand:aac.execute"]
                    }
                ]
            }
        ],
        "configuration": {
            "title": "Architecture-as-Code",
            "properties": {
                "aac.aacPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "aac",
                    "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
                    "description": "The filesystem path to the aac CLI tool."
                },
                "aac.pythonPath": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "default": "python3",
                    "pattern": "(\\\\?([^\\/]*[\\/])*)([^\\/]+)$",
                    "description": "The filesystem path to the Python3 executable."
                },
                "aac.version": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "enum": [
                        "0.0.5",
                        "0.1.0",
                        "0.1.1",
                        "0.1.2"
                    ],
                    "default": "0.1.2",
                    "description": "The version of the installed AaC tool."
                },
                "aac.lsp.serverMode": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "enum": [
                        "IO",
                        "TCP"
                    ],
                    "default": "IO",
                    "description": "The method of communication with the LSP server."
                },
                "aac.lsp.tcp.host": {
                    "scope": "machine-overridable",
                    "type": "string",
                    "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$",
                    "default": "127.0.0.1",
                    "description": "The host to use for establishing a TCP connection with the LSP server."
                },
                "aac.lsp.tcp.port": {
                    "scope": "machine-overridable",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 65535,
                    "default": 5007,
                    "description": "The port to use for establishing a TCP connection with the LSP server."
                }
            }
        },
        "commands": [
            {
                "command": "aac.execute",
                "title": "Execute AaC Command",
                "category": "AaC"
            }
        ],
        "languages": [
            {
                "id": "aac",
                "extensions": [
                    ".aac",
                    ".yaml"
                ],
                "aliases": [
                    "aac",
                    "Architecture-as-Code",
                    "AaC"
                ],
                "configuration": "./aac-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aac",
                "scopeName": "injection.aac.keywords",
                "path": "./syntaxes/keywords.tmLanguage.plist",
                "injectTo": ["source.yaml"]
            }
        ]
    },
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package --yarn -o aac.vsix"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/sinon": "^10.0.11",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.8.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "sinon": "^13.0.1",
        "ts-mock-imports": "^1.3.8",
        "typescript": "^4.5.5",
        "vsce": "^2.6.4"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    }
}
