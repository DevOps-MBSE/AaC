# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[{*.py,*.py.jinja2}]
trim_trailing_whitespace = true
insert_final_newline = true

[{*.proto,*.proto.jinja2}]
indent_size = 2

[*.y{ml,aml}]
indent_size = 2