import:
  files:
    - ./Data.aac
    - ./Services.aac
    - ./Subsystem.aac
    - ./External.aac
---
model:
  name: System
  description: A simple distributed system model
  components:
    - name: svc1
      type: ServiceOne
    - name: sub
      type: Subsystem
    - name: svc3
      type: ServiceThree
  behavior:
    - name: doFlow
      type: REQUEST_RESPONSE
      description:  process UserRequest and respond with DataD
      input:
        - name: in
          type: UserRequest
      output:
        - name: out
          type: DataD
      acceptance:
        - scenario: go
          given:
            - The System is running.
          when:
            - The System receives input.in
          then:
            - The System responds with output.out
