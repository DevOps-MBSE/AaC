[testenv]
deps = .[test]
commands = nose2 -c tox.ini {posargs}

[flake8]
extend-select = W504
ignore = E501, E402, D202, D401, W503, D212
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,venv,.env,.eggs,.tox
max-complexity = 10
max-line-length = 99
statistics = True
show-source = True
docstring-convention = google
count = True
per-file-ignores =
    # Ignore docstring errors in tests
    *tests/*:D102,D100,D101,D200,ANN101,ANN201,W293,W291,ANN001,E731

[unittest]
start-dir = .
code-directories = {{plugin.implementation_name}}

[coverage]
coverage = {{plugin.implementation_name}}
always-on = True
coverage-config = tox.ini

[run]
omit =
  *.jinja2

[report]
fail_under = 80.00
precision = 2
show_missing = True
skip_empty = True
sort = cover
